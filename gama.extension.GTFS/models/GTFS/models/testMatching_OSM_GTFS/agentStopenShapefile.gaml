                            }
                            first_detail <- false;
                            json_content <- json_content + "\"" + detail + "\"";
                        }
                        
                        json_content <- json_content + "]";
                    }
                    
                    json_content <- json_content + "\n        }";
                }
                
                json_content <- json_content + "\n      }\n    }";
            }
            
            json_content <- json_content + "\n  ]\n}";
            
            save json_content to: json_path format: "text";
            write "‚úÖ DEPARTUREINFO JSON STRUCTURE COMPL√àTE EXPORT√âE : " + json_path;
            write "üìä " + stops_exported + " arr√™ts avec departureStopsInfo export√©s";
            write "üìã Structure : map<string, map<string, list<string>>> pr√©serv√©e";
            
        } catch {
            write "‚ùå Erreur export departureInfo JSON structure compl√®te";
        }
    }
    
    // üìã EXPORT R√âSUM√â STATISTIQUES 
    action export_summary_simple {
