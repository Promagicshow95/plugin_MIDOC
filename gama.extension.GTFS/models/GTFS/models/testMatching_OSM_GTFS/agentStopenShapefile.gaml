                // STRUCTURE COMPL√àTE : map<string, map<string, list<string>>> departureStopsInfo
                json_content <- json_content + "      \"departureStopsInfo\": {\n";
                
                bool first_trip <- true;
                loop trip_id over: departureStopsInfo.keys {
