                summary_content <- summary_content + "- Bon (300-600m): " + good + " (" + int((good/nb_stops_matched)*100) + "%)\n";
                summary_content <- summary_content + "- Moyen (>600m): " + poor + " (" + int((poor/nb_stops_matched)*100) + "%)\n\n";
            }
            
            // üÜï Statistiques departureInfo
