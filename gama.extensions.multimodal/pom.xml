<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  
  <modelVersion>4.0.0</modelVersion>

  <groupId>gama.extensions.multimodal</groupId>
  <artifactId>gama.extensions.multimodal</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  <properties>
    <maven.compiler.source>11</maven.compiler.source> <!-- Version Java -->
    <maven.compiler.target>11</maven.compiler.target>
  </properties>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>gaml</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <release>11</release> <!-- Si tu utilises Java 21, tu peux le remplacer -->
        </configuration>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <!-- Dépôt Maven central par défaut (inclus automatiquement, mais peut être ajouté explicitement si besoin) -->
    <repository>
      <id>central</id>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>

  <dependencies>
    <!-- OneBusAway GTFS pour traiter les fichiers GTFS -->
    <dependency>
      <groupId>org.onebusaway</groupId>
      <artifactId>onebusaway-gtfs</artifactId>
      <version>1.3.0</version> <!-- Version la plus récente au moment de la rédaction -->
    </dependency>

    <!-- Apache Commons CSV si nécessaire pour lire des fichiers CSV -->
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-csv</artifactId>
      <version>1.8</version>
    </dependency>



    <!-- Dépendances supplémentaires si nécessaire -->
    <!-- Ajoute ici d'autres dépendances que tu souhaites utiliser pour le projet -->
  </dependencies>
</project>
